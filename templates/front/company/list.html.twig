{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <main>
        <div class="container mt-5 ">
            <div class="container mt-5">
                <div class="row mt-5 p-4 align-content-center bg-body-tertiary border text-center text-muted fw-semibold rounded">
                    <h2 class="text-muted fw-semibold" >Liste des entreprises</h2>
                </div>
            </div>

            <div class="container mt-5 text-center">
                <div class="bg-body-tertiary border mt-5 p-5 row d-flex align-items-between justify-content-around rounded">

                    <div class="row d-flex justify-content-center">
                        <div class="col-md-5" id="form-filter-company">
                        {{ form_start(form) }}
                        {{ form_row(form.industries) }}
                        {{ form_end(form) }}
                        <button id="company-reset-filter" class="btn btn-warning">RÃ©initialiser le filtre</button>
                        </div>
                    </div>

                    <div id="filter-company-no-results">
                        {#  #}
                    </div>

                    <div id="filter-companies-fetch" class="row row-cols-md-3">
                        {% for company in companies %}
                            <div class="col-md-4 mt-4 mb-4">
                                <div class="card">
                                    <div class="row p-3">
                                        <div class="d-flex justify-content-center mb-4" >
                                            <img src={{ asset('images/logo-company.jpeg') }} class="img-fluid rounded-circle p-1" style="width: 100px; height: 100px; object-fit: cover;" alt="icone d'entreprise">
                                        </div>
                                        <div class="text-start" style="height: 15vh;">
                                            <h5 class="mb-3 text-muted fw-semibold"> {{ company.name }} </h5>
                                            <p>{{ company.description|u.truncate (50 , '...') }}</p>
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <a class="btn btn-outline-secondary bi bi-eye btn-sm" href="{{ path('app_front_company_showCompany' , {id:company.id}) }}" role="button"> Voir l'entreprise</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    {# {{ knp_pagination_render(pagination) }} #}

                </div>
            </div>
        </div>
    </main>
{% endblock %}